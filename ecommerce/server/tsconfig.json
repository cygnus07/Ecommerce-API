{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "target": "ES2022",
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "types": ["node"], 
      "typeRoots": ["node_modules/@types"], 
      "baseUrl": ".", 
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }